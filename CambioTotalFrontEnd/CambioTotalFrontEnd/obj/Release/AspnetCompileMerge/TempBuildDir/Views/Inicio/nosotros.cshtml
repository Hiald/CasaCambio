@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .banner .mein-menu .navbar #navbarNavDropdown ul.navbar-nav li.nav-item a.nav-link {
        font-family: "Poppins", sans-serif;
        color: #fff;
        font-size: 15px;
        line-height: 1.556;
        font-weight: 600;
        padding-right: 0;
        padding-left: 0;
    }
</style>
<section class="banner" style="background: linear-gradient(rgb(8 8 8 / 50%), rgb(14 14 14 / 50%)), url(../../assets/img2.jpeg);
    background-size: cover;background-position: center; background-repeat: no-repeat;padding-bottom: 40px;position: relative;">
    <div class="laptop">
        @*<img src="~/assets/img/laptop-man.png" class="man-lap" alt="">*@
    </div>
    <!-- Main-menu Strat -->
    <div class="mein-menu">
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container">
                <a class="navbar-brand" style="display: inline-flex;" href="@Url.Action("Index","Inicio")">
                    <img src="~/assets/tucambio.png" height="45" class="logo" alt="logo">
                    <h4 style="color:white;margin-top: 4%;">TuCambioTotal</h4>
                    <!-- <img src="assets/img/logo.png" class="logo" alt="logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index","Inicio")">Inicio</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Inicio")">Nosotros</a>
                            </li>*@
