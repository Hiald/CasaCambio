            }

            if ($("#checkbox-signup22").prop('checked') == false) {
                alert("Debes declarar que la cuenta es tuya");
                return;
            }
            
            $('#divcarga').addClass("is-active");
            $.ajax({
                type: 'post',
                url: RutaPrincipal + 'Inicio/OperacionCuentaBancaria',
                data: {
                    "wtipoOperacion": 2,
                    "widCuentBanc": sidcuentaBanc,
                    "widusuario": iIdUsuario,
                    "witipocuenta": itipocuenta,
                    "wimoneda": imonedaE,
