                            //    "bSort": false,
                            //    "aTargets": [5]
                            //}
                        ]
                });



        }

        $(document).ready(function () {
            fnlistarTabla();
        });


        $('#btnIrOperacion').click(function () {
            window.location.href = "/Inicio/principal";
        });

        function fn_Editar(pidcuentabancaria, pimoneda, pibanco, pitipocuenta, pvnumerocuenta, pvnombrecuenta, pitipodeclaracion, pvtitular) {
            $('#hddidcuentabancaria').val(pidcuentabancaria);
            $('#txcuentaE').val(decodeURIComponent(pvnombrecuenta));
            $('#slctipocuentaE option[value="' + pitipocuenta + '"]').attr('selected', 'selected');
            $('#slcbancoE option[value="' + pibanco + '"]').attr('selected', 'selected');
            $('#slcmonedaE option[value="' + pimoneda + '"]').attr('selected', 'selected');
            $('#txnumerocuentaE').val(decodeURIComponent(pvnumerocuenta));

            $('#modalEditarCuenta').modal("show");
        }

        function fn_Actualizar() {
