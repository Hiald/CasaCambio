@section scripts{
    <script>
        function validarnumero(valor) {
            return /^\d*$/.test(valor);
        }

        $("#frmUsuario").submit(false);
        $('#frm2').submit(false);
        $('#frm2Editar').submit(false);

        $('#txnumerocuenta').keyup(function (e) {
            if (/\D/g.test(this.value)) {
                this.value = this.value.replace(/\D/g, '');
            }
        });

        //tipo operacion 1 reg, 0 upd
        $("#btnAgregar").click(function () {

            var txcuenta = $('#txcuenta').val();
            var slctipocuenta = $('#slctipocuenta option:selected').attr('value');
            var slcbanco = $('#slcbanco option:selected').attr('value');
            var slcmoneda = $('#slcmoneda option:selected').attr('value');
            var txnumerocuenta = $('#txnumerocuenta').val();
            var sfecharegistro = moment().format("YYYY-MM-DD");
            var shora = moment().format("hh:mm:ss");
            var paramidusuario = parseInt($('#hddidusuario').val());

            if (txcuenta == "" || slctipocuenta == 0 || slcbanco == 0 || slcmoneda == 0 || txnumerocuenta.length == 0) {
                alert("Falta completar campos");
                return;
            }
            
            if (!validarnumero($('#txnumerocuenta').val())) {
                alert("Ingrese un número de cuenta válido");
                return;
            }

            if (parseInt(slcbanco) == 13 && txnumerocuenta.length < 11) {
                alert("Debes ingresar el CCI de Banco de la nación.");
                return;
            }

            if (parseInt(slcbanco) == 5 && txnumerocuenta.length < 10) {
                alert("Debes ingresar el CCI de Scotiabank.");
                return;
            }

            if (parseInt(slcbanco) == 3 && txnumerocuenta.length < 18) {
                alert("Debes ingresar el CCI de BBVA.");
                return;
            }

            if (parseInt(slcbanco) == 2 && txnumerocuenta.length < 13) {
                alert("Debes ingresar el CCI de Interbank.");
                return;
            }

            if (parseInt(slcbanco) == 1 && txnumerocuenta.length < 14) {
                alert("Debes ingresar el número de cuenta BCP.");
                return;
            }

            if (parseInt(slcbanco) == 4 && txnumerocuenta.length < 12) {
                alert("Debes ingresar el CCI de BanBif.");
                return;
            }

            if ($("#checkbox-signup").prop('checked') == false) {
                alert("Debes declarar que la cuenta es tuya");
                return;
            }

            $('#divcarga').addClass("is-active");
            $.ajax({
                type: 'post',
                url: RutaPrincipal + 'Inicio/OperacionCuentaBancaria',
                data: {
                    "wtipoOperacion": 1,
                    "widCuentBanc": 0,
                    "widusuario": paramidusuario,
                    "witipocuenta": slctipocuenta,
                    "wimoneda": slcmoneda,
                    "wibanco": slcbanco,
                    "wbanco": "",
                    "wnumerocuenta": txnumerocuenta,
                    "wnombrecuenta": txcuenta,
                    "witipodeclaracion": 0,
                    "wtitular": "",
                    "wfecReg": sfecharegistro,
                    "whoraReg": shora
                },
            }).done(function (result) {
                $('#divcarga').removeClass("is-active");
                NotificacionSuccessDerecha("Cuenta creada correctamente");
                $('#txcuenta').val("");
                $('#txnumerocuenta').val("");
                $('#modalUsuario').modal("hide");
                fnlistarTabla();

                var iInicioTablas = $('#basic-datatable').dataTable().fnGetData().length;
                if (iInicioTablas == 1) {
                    $('#fill-info-modal').modal("show");
                }

            });

        });

        var GResultado = 0;
        var gconteo = 0;
        function fnlistarTabla() {
