                                        + ", " + "\"" + encodeURIComponent(row.vtitular) + "\""
                                        + ")'>Modificar</button>";
                                    return strHtml;
                                },
                                "sWidth": "5px",
                                "sClass": "css-center",
                                "bSort": false,
                                "aTargets": [4]
                            }
                            //,{
                            //    "mRender": function (data, type, row) {
