                        <div class="tab-pane show active" id="basic-datatable-preview">
                            <table style="display:none;" id="tblreporte" class="table dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th data-priority="1">Tipo cuenta</th>
                                        <th data-priority="2">Moneda</th>
                                        <th data-priority="3">Banco</th>
                                        <th data-priority="4">Número de cuenta</th>
                                        <th>Número de cuenta interbancaria</th>
                                        <th>Nombre de la cuenta</th>
                                        <th>Nombres y apellidos</th>
                                        <th>Tipo documento / Número</th>
                                        <th>RUC</th>
                                        <th>Razón social</th>
                                        <th>Correo</th>
                                        <th>Fecha registro</th>
                                        <th>Pregunta PEP 1</th>
                                        <th>Pregunta PEP 2</th>
                                        <th>Pregunta PEP 3</th>
